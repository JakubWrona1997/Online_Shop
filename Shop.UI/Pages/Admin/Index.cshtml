@page
@model Shop.UI.Pages.Admin.IndexModel
@{
}
<div id="app" class="container">
    <div class="row">
        <div class="col-3">
                <div class="wrapper">
                    <!-- Sidebar -->
                    <nav id="sidebar">
                        <div class="sidebar-header">
                            <h3>Admin Panel</h3>
                        </div>
                        <ul class="list-unstyled components">
                            <li class="nav-item" @@click="menu = 0"><a href="#" class="nav-link">Produkty</a></li>
                            <li class="nav-item" @@click="menu = 1"><a href="#" class="nav-link">Zamówienia</a></li>
                            <li class="nav-item" @@click="menu = 2"><a href="#" class="nav-link">Magazyn</a></li>
                        </ul>
                    </nav>

                </div>
            </div>
        <div class="col-9">
            <product-manager v-if="menu === 0"></product-manager>
            <p v-else-if="menu === 1">Orders</p>
            <p v-else-if="menu === 2">Stock</p>
        </div>
    </div>
</div>
@section scripts{

    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.12"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/admin/product-manager.js"></script>
    <script src="~/js/admin/main.js"></script>

}


