@page
@model Shop.UI.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-lg-6 logpic">
        <img src="~/images/nprofile.jpg" width="100%" height="100%" />
    </div>
    <div class="col-lg-6 regarea">
        <h1><b>Shop.UI</b></h1><br />
        <h3>Jesteś tu pierwszy raz?</h3>
        <br>
        <form>
            <h5>Adres e-mail</h5>
            <input type="email" class="form-control" id="inputEmail3" placeholder="Wpisz adres e-mail">
            <br>
            <div class="row" style="text-align: left">
                <div class="col-md-6 col-sm-6">
                    <h5>Imię</h5>
                    <input type="text" class="form-control" placeholder="Wpisz imię">
                </div>
                <div class="col-md-6 col-sm-6">
                    <h5>Nazwisko</h5>
                    <input type="text" class="form-control" placeholder="Wpisz imię">
                </div>
            </div>
            <div class="row" style="text-align: left">
                <div class="col-md-6 col-sm-6">
                    <h5>Hasło</h5>
                    <input type="password" class="form-control" id="InputPassword2" placeholder="Wpisz hasło">
                </div>
                <div class="col-md-6 col-sm-6">
                    <h5>Powtórz hasło</h5>
                    <input type="password" class="form-control" id="InputPassword3" placeholder="Wpisz hasło">
                </div>
            </div>
            <br>
            <div id="button1">
                <button type="submit" class="signin">Załóż konto</button>
            </div>
        <br>
    </form>
</div>
</div>