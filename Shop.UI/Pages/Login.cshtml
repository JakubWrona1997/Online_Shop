@page
@model Shop.UI.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-lg-6 logpic">
        <img src="~/images/nprofile.jpg" width="100%" height="100%" />
    </div>
    <div class="col-lg-6 logarea">
        <h1><b>Shop.UI</b></h1><br />
        <h3>Logowanie do konta klienta</h3><br>
        <form>
            <h5>Adres e-mail</h5>
            <input type="email" class="form-control" id="inputEmail2" placeholder="Wpisz adres e-mail">
            <br>
            <h5>Hasło</h5>
            <input type="password" class="form-control" id="InputPassword1" placeholder="Wpisz hasło">
            <br>
            <h5>Nie masz konta? <a class="text-danger" asp-page="/Register">Zarejestruj się</a></h5>
            <div id="button1">
                <button type="submit" class="signin" asp-page="/Account">Zaloguj się</button>
            </div>
        </form>
    </div> 
</div>