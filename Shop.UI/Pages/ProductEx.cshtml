@page
@model Shop.UI.Pages.ProductExModel
@{
    ViewData["Title"] = "ProductEx";
}

<div class="row"></div>
<div class="row prodexrow">
    <div class="col-lg-6 px-5 py-5">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <!-- SLIDE 1 -->
                <div class="carousel-item active">
                    <img src="~/images/EXPROD_1.jpg" style="width: 100%;">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <!-- SLIDE 2 -->
                <div class="carousel-item">
                    <img src="~/images/EXPROD_2.jpg" style="width: 100%;">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <!-- SLIDE 3 -->
                <div class="carousel-item">
                    <img src="~/images/EXPROD_3.jpg" style="width: 100%;">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-lg-6 px-5 py-lg-5 px-sm-5 py-sm-1 prodinfo">
        <h3>Przykładowy produkt</h3>
        <div style="display: flex;">
            <h2>49.99</h2>&nbsp;<h5>PLN</h5>
        </div>
        <br />
        <label for="exampleFormControlSelect1">ROZMIAR</label>
        <div class="inline">
            <select class="form-control form-control-lg" id="exampleFormControlSelect1" style="width:100px;">
                <option>XS</option>
                <option>S</option>
                <option>L</option>
                <option>XL</option>
            </select>
            &nbsp;&nbsp;&nbsp;
            <div id="button2">
                <button class="addcart"><a asp-area="" asp-page="/ShoppingCart">DODAJ DO KOSZYKA</a></button>
            </div>
        </div>
    </div>
    <div class="col-lg-6 px-5" style="margin-left:1px; text-align: left;">
        <h6>
            Bawełniana bluza z nadrukami NASA. Regularny krój, standardowa długość. Zabudowany dekolt i ściągaczowe wykończenie brzegów.
            <br /><br />
            <ul style="list-style-type: disc;">
                <li>regularny krój</li>
                <li>standardowa długość</li>
                <li>zabudowany dekolt</li>
                <li>nadruki NASA z przodu, z tyłu i na rękawach</li>
            </ul>
        </h6>
    </div>
</div>
<br />