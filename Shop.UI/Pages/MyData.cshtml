@page
@model Shop.UI.Pages.MyDataModel
@{
    ViewData["Title"] = "MyData";
    Layout = "~/Pages/Shared/_AccountLayout.cshtml";
}

<h4><p style="text-align: left;">MOJE DANE</p></h4>
<br />
<br />

<form>
    <div class="row">
        <div class="col-md-4 py-1 servicealign"></div>
        <div class="col-md-8 form-inline">
            <input type="radio" id="pan" name="gender" value="pan" checked>
            <label for="pan">PAN</label>
            &nbsp; &nbsp; &nbsp;
            <input type="radio" id="pani" name="gender" value="pani">
            <label for="pani">PANI</label>
        </div>
        <br />
        <div class="col-md-4 py-1 servicealign">
            <h5>Imię</h5>
        </div>
        <div class="col-md-8">
            <input type="text" class="form-control" placeholder="$Imię">
        </div>
    </div>
        <br />
        <div class="row">
            <div class="col-md-4 py-1 servicealign">
                <h5>Nazwisko</h5>
            </div>
            <div class="col-md-8">
                <input type="text" class="form-control" placeholder="$Nazwisko">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4 py-1 servicealign">
                <h5>Adres e-mail</h5>
            </div>
            <div class="col-md-8">
                <input type="email" class="form-control" id="inputEmail4" placeholder="$E-mail">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4 py-2 servicealign">
                <h5>Telefon</h5>
            </div>
            <div class="col-md-8 form-inline">
                <select class="form-control" id="exampleFormControlSelect3" style="width:80px;">
                    <option>+48</option>
                    <option>+47</option>
                    <option>+46</option>
                    <option>+45</option>
                    <option>+44</option>
                    <option>+43</option>
                </select>
                <input type="tel" class="form-control">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-4 py-2 servicealign">
                <h5>Data urodzenia</h5>
            </div>
            <div class="col-md-8" style="text-align: left;">
                <input type="date" id="start" name="trip-start"
                       value="2018-07-22"
                       min="2018-01-01" max="2018-12-31">
            </div>
        </div>
        <div id="button1">
            <button type="submit" class="signin">Zapisz zmiany</button>
        </div>
</form>